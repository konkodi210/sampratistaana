<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sampratistaana.controllers.LovAdminController">
   <children>
      <Label alignment="TOP_CENTER" styleClass="title-label" text="%admin.dropdown.title" />
      <ButtonBar VBox.vgrow="ALWAYS">
         <buttons>
            <HBox spacing="10.0">
               <children>
                  <Label text="%admin.dropdown" />
                  <ComboBox fx:id="lovComboBox" prefWidth="150.0" />
               </children>
            </HBox>
          <Button fx:id="saveBtn" disable="true" mnemonicParsing="false" text="%common.add" />
            <Button disable="true" mnemonicParsing="false" text="%common.delete" />
            <Button fx:id="deleteBtn" disable="true" mnemonicParsing="false" text="%common.save" />
         </buttons>
      </ButtonBar>
      <TableView fx:id="lovTable">
        <columns>
          <TableColumn text="Unique Key" />
          <TableColumn text="%common.name" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView> 

   </children>
   <padding>
      <Insets left="5.0" right="25.0" />
   </padding>
</VBox>
